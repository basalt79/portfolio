<section
  class="relative min-h-screen flex flex-col justify-center items-center text-center text-white px-6 overflow-hidden"
  style="
    background: linear-gradient(135deg, var(--hero-bg-from), var(--hero-bg-via), var(--hero-bg-to));
  "
>
  <!-- Decorative Glow Background -->
  <div class="absolute inset-0 -z-10 opacity-20 blur-3xl pointer-events-none">
    <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <radialGradient id="glow" cx="50%" cy="50%" r="50%">
          <stop offset="0%" stop-color="#ffffff22"/>
          <stop offset="100%" stop-color="#00000000"/>
        </radialGradient>
      </defs>
      <rect width="100%" height="100%" fill="url(#glow)" />
    </svg>
  </div>

  <!-- Hero Content -->
  <h1
    class="text-5xl md:text-7xl font-extrabold mb-6 bg-clip-text text-transparent animate-fade-in animate-duration-1000 animate-ease-out animate-once drop-shadow-lg"
    style="
      background-image: linear-gradient(to right, var(--hero-text-gradient-from), var(--hero-text-gradient-via), var(--hero-text-gradient-to));
    "
  >
    Hi, I'm Georg
  </h1>

  <p class="max-w-2xl text-xl md:text-2xl mb-10 drop-shadow-md animate-slide-in-from-bottom animate-delay-200 animate-duration-1000 animate-ease-out animate-once"
     style="color: var(--color-text);">
    Software Architect specializing in
    <span class="font-semibold" style="color: var(--hero-highlight-yellow)">scalable cloud</span> solutions,
    <span class="font-semibold" style="color: var(--hero-highlight-pink)">microservices</span>, and
    <span class="font-semibold" style="color: var(--hero-highlight-blue)">event-driven systems</span>.
  </p>

  <div class="flex flex-wrap gap-6 justify-center animate-zoom-in animate-delay-500 animate-duration-1000 animate-ease-out animate-once">
    <a
      href="#skills"
      class="px-7 py-3 border rounded-xl transition font-medium shadow-lg"
      style="
        background: rgba(255,255,255,0.10);
        border-color: rgba(255,255,255,0.30);
        color: var(--color-text);
        backdrop-filter: blur(4px);
      "
    >
      ðŸš€ Explore My Skills
    </a>
    <a
      href="#contact"
      class="px-7 py-3 border rounded-xl transition font-medium shadow-lg"
      style="
        border-color: rgba(255,255,255,0.30);
        color: var(--color-text);
        background: rgba(255,255,255,0.05);
      "
      onmouseover="this.style.color='var(--hero-highlight-yellow)'"
      onmouseout="this.style.color='var(--color-text)'"
    >
      ðŸ“¬ Contact Me
    </a>
  </div>
</section>
