---
import type { SkillGroup } from "./skills.ts";
const { title, skills } = Astro.props as SkillGroup;
---

<article class="shadow-md rounded-xl p-6 transition cursor-pointer skill-card card-hover-effect">
  <h3 class="text-lg font-semibold mb-4" style="color: var(--color-text);">
    {title}
  </h3>

  <div class="flex flex-col gap-4">
    {
      skills.map((skill) => (
        <div class="flex items-center gap-4">
          <div class="flex-shrink-0 w-6 h-6" set:html={skill.icon || ""} />
          <div class="flex-1">
            <div class="flex justify-between mb-1">
              <span
                class="text-sm font-medium"
                style="color: var(--color-text);"
              >
                {skill.name}
              </span>
              <span class="text-xs" style="color: var(--hero-highlight-blue);">
                {skill.percentage}%
              </span>
            </div>
            <div
              class="w-full rounded-full h-3"
              style="background: var(--hero-highlight-blue); opacity: 0.15;"
            >
              <div
                class="h-3 rounded-full transition-all duration-600 ease-in-out"
                style={`width: ${skill.percentage}%; background: var(--hero-highlight-pink);`}
              />
            </div>
          </div>
        </div>
      ))
    }
  </div>
</article>
